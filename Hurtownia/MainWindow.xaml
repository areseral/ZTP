<Window x:Class="Hurtownia.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="210" Width="325">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition  Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="160*"></ColumnDefinition>
            <ColumnDefinition Width="160"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Label Margin="9,2,0,4" Grid.ColumnSpan="2">Logowanie</Label>
        <StackPanel Margin="0,0,5,2"  Grid.Row="1" >
            <Label HorizontalAlignment="Center" Margin="3" Padding="10,3"  >Login</Label>
            <Label HorizontalAlignment="Center" Margin="3" Padding="10,3"  >Hasło</Label>
        </StackPanel>
        <StackPanel Margin="0,0,5,2" Grid.Column="2"  Grid.Row="1" >
            <TextBox Name="textLogin" HorizontalAlignment="Center" Margin="10,3" Padding="10,3" Width="135"/>
            <TextBox Name="textHaslo" HorizontalAlignment="Center" Margin="10,3" Padding="10,3" Width="135"/>
            <Button Margin="10,3" Padding="10,3" Click="Zaloguj" >Zaloguj</Button>
        </StackPanel>
    </Grid>
</Window>
